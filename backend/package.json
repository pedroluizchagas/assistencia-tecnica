{
  "name": "assistencia-tecnica-backend",
  "version": "1.0.0",
  "description": "Backend do Sistema de Assistência Técnica",
  "private": true,
  "type": "commonjs",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo \"No build step required for Node.js\"",
    "health": "node health-check.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "health:e2e": "node scripts/e2e-health.js"
  },
  "keywords": [
    "assistencia-tecnica",
    "api",
    "express",
    "supabase"
  ],
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "2.58.0",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "drizzle-orm": "0.33.0",
    "express": "4.21.2",
    "helmet": "8.0.0",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "node-cron": "3.0.3",
    "pg": "8.16.3",
    "winston": "3.11.0",
    "winston-daily-rotate-file": "4.7.1",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@types/jest": "29.5.8",
    "@types/node": "20.12.12",
    "jest": "29.7.0",
    "nodemon": "3.1.9",
    "supertest": "6.3.3",
    "typescript": "5.6.3"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
